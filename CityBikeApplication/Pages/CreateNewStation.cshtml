@page
@model CityBikeApplication.Pages.CreateNewStationModel
@{
    ViewData["Title"] = "New Station";
}

<h1>@ViewData["Title"]</h1>
<p></p>


@if (Model.errorMessages.Count > 0)
{
    foreach (string errorMessage in Model.errorMessages)
    {
        <div class="alert alert-warning" role="alert">
            <strong>@errorMessage</strong>
        </div>
    }
}

<form method="POST">


    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="id" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Nimi</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="nimi" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Namn</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="namn" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="name" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Osoite</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="osoite" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Address</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="address" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Kaupunki</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="kaupunki" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Stad</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="stad" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Operaattori</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="operaattori" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Kapasiteetti</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="kapasiteetti" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Latitude</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="y" value="" />
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Longitude</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="x" value="" />
        </div>
    </div>




    <p></p>

    <div class="row mb-3">
        <div class="col-sm-2 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-2 d-grid">
            <a class="btn btn-outline-primary" href="/StationList" role="button">Cancel</a>
        </div>
    </div>

</form>
